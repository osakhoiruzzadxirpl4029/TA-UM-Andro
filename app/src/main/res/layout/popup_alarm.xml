<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:orientation="vertical"
    android:layout_height="600dp"
    android:layout_gravity="center"
    android:padding="5dp"
    android:background="@drawable/background_main"
    >
    <TextView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:text="X"
        android:gravity="center"
        android:layout_gravity="end"
        android:id="@+id/closePop"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="338dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="Pilih Hari: "
            android:textColor="@color/black" />

        <LinearLayout
            android:layout_width="138dp"
            android:layout_height="281dp"
            android:paddingLeft="30dp"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/seninCheck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Senin" />

            <CheckBox
                android:id="@+id/selasaCheck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Selasa" />

            <CheckBox
                android:id="@+id/rabuCheck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Rabu" />

            <CheckBox
                android:id="@+id/kamisCheck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Kamis" />

            <CheckBox
                android:id="@+id/jumatCheck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Jumat" />

            <CheckBox
                android:id="@+id/sabtuCheck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Sabtu" />

            <CheckBox
                android:id="@+id/mingguCheck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Minggu" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="138dp"
            android:layout_height="281dp"
            android:paddingLeft="30dp"
            android:orientation="vertical">


        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="338dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="Pilih Jam: "
            android:textColor="@color/black" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start Time"
                android:background="@color/primaryTextColor"
                android:padding="10dp"
                android:id="@+id/startTime"
                android:onClick="startTimePick"
                style="@style/AppTheme.NoActionBar"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="End Time"
                android:padding="10dp"
                android:id="@+id/endTime"
                android:onClick="endTimePick"
                android:background="@color/registerBack"
                style="@style/AppTheme.NoActionBar"
                />

        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center">

        <TextView
            android:id="@+id/setAlarmFix"
            android:gravity="center"
            style="@style/registerButton"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/loginViewsMargin"
            android:text="Set Alarm" />


    </RelativeLayout>





</LinearLayout>