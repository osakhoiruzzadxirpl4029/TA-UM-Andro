<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:orientation="vertical"
    android:layout_height="600dp"
    android:layout_gravity="center"
    android:padding="5dp"
    android:background="@drawable/background_main"
    >

    <LinearLayout
        android:layout_width="338dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="Repeat: "
            android:textColor="@color/black" />

        <LinearLayout
            android:layout_width="138dp"
            android:layout_height="158dp"
            android:orientation="vertical"
            android:paddingLeft="30dp">

            <RadioGroup
                android:id="@+id/radioG"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/sekaliCheck"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Sekali" />

                <RadioButton
                    android:id="@+id/harikerjaCheck"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Weekday" />

                <RadioButton
                    android:id="@+id/hariliburCheck"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Weekend" />

            </RadioGroup>


        </LinearLayout>

        <LinearLayout
            android:layout_width="138dp"
            android:layout_height="158dp"
            android:orientation="vertical"
            android:paddingLeft="30dp">


        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="338dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp">

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="Waktu : "
            android:textColor="@color/black" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="10dp"
            >

            <Button
                android:id="@+id/startButton1"
                style="@style/loginButton"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="Start" />
            <Button
                android:id="@+id/endButton1"
                style="@style/loginButton"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="End" />

        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center">

        <Button
            android:id="@+id/setAlarmFix"
            style="@style/registerButton"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/loginViewsMargin"
            android:gravity="center"
            android:text="Set Alarm" />



    </RelativeLayout>
    <LinearLayout
        android:layout_height="100dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Alarm1"
            android:id="@+id/Alarm1"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:hint="Alarm2"
            android:id="@+id/Alarm2"
            />


    </LinearLayout>




</LinearLayout>